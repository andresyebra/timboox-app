<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">Iniciar Session</div>
        <div class="panel-body">


          <div class="form-horizontal">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email,class:"col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, class:"col-md-4 control-label"  %>
              <div class="col-md-6">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <div class="col-md-6 col-md-offset-4">
                    <div class="checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :"Recordar" %>
                    </div>
                  </div>
                </div>
            <% end -%>
            <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <%= f.submit "Iniciar Session", class:"btn btn-primary" %>
            </div>
          </div>
          <% end %>
          <%#= render "devise/shared/links" %>
            <% flash.each do |key, value| %>
              <div class="form-group">
                <div class="col-md-8 col-md-offset-2">
              <div class="col-md-6 col-md-offset-2" id="alert">
                <div class="alert alert-danger" role="alert"> <%= value %></div>
              </div>
                </div>
              </div>
            <% end %>
        </div>
        </div>

      </div>
    </div>
  </div>
</div>


