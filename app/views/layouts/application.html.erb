<!DOCTYPE html>
<html>
<head>
  <title>TimboxApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<!--  <meta name="turbolinks-cache-control" content="no-cache">-->
</head>
<body>
<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Timbox', root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="app-navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
               aria-expanded="false">
              <%= current_user.email %>
              <span class="caret"></span>
            </a>

            <ul class="dropdown-menu" role="menu">
              <li>
              <li> <%= link_to ' Cerrar session', destroy_user_session_path, method: :delete %></li>
              <form id="logout-form" action="#" method="POST"
                    style="display: none;">
              </form>
              </li>
            </ul>
          </li>

          </ul>

          <ul class="nav navbar-nav">
            <li class="nav-item ">
              <%= link_to 'Inicio', root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item ">
              <%= link_to 'Sucursales', offices_path, class: 'nav-link' %>
            </li>
            <li class="nav-item ">
              <%= link_to 'Empleados', employees_path, class: 'nav-link' %>
            </li>
            <li class="nav-item ">
              <%= link_to 'Mi Perfil', profile_path("#{current_user.id}"), class: 'nav-link' %></li>
        <% else %>
          <li><%= link_to 'Iniciar Session', new_user_session_path %></li>
          <li><%= link_to 'Registro', new_user_registration_path %></li>
        <% end %>
        </ul>
        </div>
  </div>
</nav>
<br>

<%= yield %>
<%= yield :head %>
</body>
</html>
